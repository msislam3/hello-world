@{
    var db = Database.Open("SmallBakery");
    var data = db.Query("SELECT Name, Price FROM Product");
    var dbChart = new Chart(width: 600, height: 400, theme: ChartTheme.Green);
    dbChart.AddTitle("Product Sales");
    dbChart.DataBindTable(dataSource: data, xField: "Name");
    dbChart.Write();
}

