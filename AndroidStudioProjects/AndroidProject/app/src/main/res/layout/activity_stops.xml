<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rifat.androidproject.StopsActivity"
    android:id="@+id/stopsLayout">

    <TextView
        android:id="@+id/ocTextViewStopsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/ocFavoriteStops"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/ocListViewStops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ocEditTextAddStop"
        android:layout_below="@id/ocTextViewStopsHeader"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/ocEditTextAddStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/ocButtonAddStop"
        android:ems="10"
        android:inputType="textPersonName|number" />

    <Button
        android:id="@+id/ocButtonAddStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/ocAddStop" />
</RelativeLayout>
